<h1>店舗検索画面です</h1>
<%= form_with url: shops_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :keyword, "店舗名" %>
    <%= f.text_field :keyword, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "検索", class: "btn btn-primary" %>
  </div>
<% end %>
<gmp-map
  center="37.4220656,-122.0840897"
  zoom="10"
  map-id="DEMO_MAP_ID"
  style="height: 400px"
></gmp-map>

<!--
