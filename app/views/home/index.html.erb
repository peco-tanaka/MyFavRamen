        document.addEventListener('DOMContentLoaded', function() {
            // „Éä„Éì„Ç≤„Éº„Ç∑„Éß„É≥„Éê„Éº„Çπ„ÇØ„É≠„Éº„É´ÂäπÊûú
            window.addEventListener('scroll', function() {
                if (window.scrollY > 50) {
                    document.querySelector('.navbar').classList.add('scrolled');
                } else {
                    document.querySelector('.navbar').classList.remove('scrolled');
                }
            });
            
            // Ë¶ÅÁ¥†Ë°®Á§∫„Ç¢„Éã„É°„Éº„Ç∑„Éß„É≥
            const animatedElements = document.querySelectorAll('.animated-element');
            
            function checkIfInView() {
                animatedElements.forEach(function(element) {
                    const elementTop = element.getBoundingClientRect().top;
                    const elementVisible = 150;
                    
                    if (elementTop < window.innerHeight - elementVisible) {
                        element.classList.add('visible');
                    }
                });
                
                const rankingImg = document.querySelector('.ranking-demo-img');
                if (rankingImg) {
                    const imgTop = rankingImg.getBoundingClientRect().top;
                    if (imgTop < window.innerHeight - 100) {
                        rankingImg.classList.add('visible');
                    }
                }
            }
            
            // ÂàùÊúü„ÉÅ„Çß„ÉÉ„ÇØ
            checkIfInView();
            
            // „Çπ„ÇØ„É≠„Éº„É´ÊôÇ„ÉÅ„Çß„ÉÉ„ÇØ
            window.addEventListener('scroll', checkIfInView);
        });
