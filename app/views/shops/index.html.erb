<h1>店舗検索画面です</h1>
<%= form_with url: shops_path, local: true do |f| %>
  <div class="form-group">
    <%= f.label :keyword, "店舗名" %>
    <%= f.text_field :keyword, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "検索", class: "btn btn-primary" %>
  </div>
<% end %>

<div data-controller="maps">
  <div data-maps-target="map" id="map"></div>
</div>



