<div class="container-fluid main-content text-center">

  <div class="row">
    <!-- メインのランキングコンテンツエリア（左側） -->
    <div class="col-md-8">
      <div class="logo-container">
        <div class="logo-text">
          <span class="logo-my">My</span><span class="logo-fav">Fav</span><span class="logo-ramen"><%= @current_genre.name %>らぁめん</span>
        </div>
      </div>
      <%# ランキングアイテムの存在を確認 %>
      <% if @ranking_items && @ranking_items.any? %>
        <!-- ランキングカード表示エリア -->
        <div class="ranking-container">
          <!-- 1位 - 最大サイズのカード -->
          <div class="card mb-3 border-0 shadow-sm rank-1">
            <div class="position-relative">
              <span class="position-absolute top-0 start-0 bg-warning text-white p-2 fs-5 rounded-end fw-bold">1st</span>
              <!-- 画像の代わりにプレースホルダー -->
              <% if @ranking_items.first.photo.attached? %>
                <%= image_tag @ranking_items.first.photo, class: "card-img-top", style: "height: 160px; object-fit: cover;" %>
              <% else %>
                <div class="placeholder-img position-relative" style="height: 160px; background-color: #f8f9fa;">
                  <div class="position-absolute top-50 start-50 translate-middle text-muted">
                    <i class="bi bi-image fs-1"></i>
                    <p class="mb-0">ラーメン写真</p>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="card-body py-2 text-center bg-light">
              <h4 class="card-title mb-1">店舗名が表示されます</h4>
              <p class="card-text text-muted small mb-2">メニュー名が表示されます</p>
              <div class="comment-box bg-white p-2 rounded border">
                <p class="mb-0 small"><i class="bi bi-chat-quote-fill text-warning me-1"></i>コメントが表示されます</p>
              </div>
            </div>
          </div>
          
          <div class="row g-3">
            <!-- 2位 - 中サイズのカード -->
            <div class="col-6">
              <div class="card h-100 border-0 shadow-sm rank-2">
                <div class="position-relative">
                  <span class="position-absolute top-0 start-0 bg-secondary text-white p-1 fs-6 rounded-end fw-bold">2nd</span>
                  <!-- 画像の代わりにプレースホルダー -->
                  <div class="placeholder-img position-relative" style="height: 100px; background-color: #f8f9fa;">
                    <div class="position-absolute top-50 start-50 translate-middle text-muted">
                      <i class="bi bi-image fs-2"></i>
                      <p class="mb-0 small">ラーメン写真</p>
                    </div>
                  </div>
                </div>
                <div class="card-body py-2 text-center bg-light">
                  <h5 class="card-title mb-1">店舗名が表示されます</h5>
                  <p class="card-text text-muted small mb-2">メニュー名が表示されます</p>
                </div>
              </div>
            </div>
            
            <!-- 3位 - 中サイズのカード -->
            <div class="col-6">
              <div class="card h-100 border-0 shadow-sm rank-3">
                <div class="position-relative">
                  <span class="position-absolute top-0 start-0 bg-danger text-white p-1 fs-6 rounded-end fw-bold">3rd</span>
                  <!-- 画像の代わりにプレースホルダー -->
                  <div class="placeholder-img position-relative" style="height: 130px; background-color: #f8f9fa;">
                    <div class="position-absolute top-50 start-50 translate-middle text-muted">
                      <i class="bi bi-image fs-2"></i>
                      <p class="mb-0 small">ラーメン写真</p>
                    </div>
                  </div>
                </div>
                <div class="card-body py-2 text-center bg-light">
                  <h5 class="card-title mb-1">店舗名が表示されます</h5>
                  <p class="card-text text-muted small mb-2">メニュー名が表示されます</p>
                </div>
              </div>
            </div>
          </div>

          <% @ranking_items.order(:position).each do |item| %>
            <div class="card mb-2 border-0 shadow-sm ranking-item"
                  data-ranking-sort-target="item"
                  data-id="<%= item.id %>">
              <div class="card-body p-2">
                <div class="row align-items-center">
                  <div class="col-1 text-center">
                    <!-- ランク表示 -->
                    <span class="position-number fw-bold fs-5 <%= item.position <= 3 ? 'text-' + ['warning', 'secondary', 'danger'][item.position-1] : '' %>"><%= item.position %></span>
                  </div>

                  <div class="col-2">
                    <!-- 画像プレビュー（小さいサイズで統一） -->
                    <% if item.photo.attached? %>
                      <%= image_tag item.photo, class: "img-thumbnail", style: "width: 70px; height: 70px; object-fit: cover;" %>
                    <% else %>
                      <div class="placeholder-img d-flex align-items-center justify-content-center"
                            style="width: 70px; height: 70px; background-color: #f8f9fa; border-radius: 0.25rem;">
                        <i class="bi bi-image text-muted"></i>
                      </div>
                    <% end %>
                  </div>

                  <div class="col-5 text-start">
                    <!-- 店舗・メニュー情報 -->
                    <h5 class="card-title mb-0">
                      <% if item.is_manual? %>
                        <%= item.manual_shop_name %>
                        <span class="badge bg-secondary ms-1" style="font-size: 0.7em;">手動</span>
                      <% elsif item.shop.present? %>
                        <%= item.shop.name %>
                        <%= link_to '<i class="bi bi-info-circle"></i>'.html_safe, shop_path(item.shop), target: "_blank", class: "ms-1 text-decoration-none text-secondary", title: "店舗詳細" %>
                      <% end %>
                    </h5>
                    <p class="card-text small text-muted mb-0"><%= item.menu_name %></p>
                  </div>

                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <%# ランキングアイテムがない場合 %>
        <div class="alert alert-info">
          <h5>まだお店が登録されていません</h5>
          <p>ランキングを編集して、お気に入りのラーメンを登録しましょう！</p>
          <%= link_to "ランキングを編集する", edit_ranking_path(@current_ranking), class: "btn btn-orange rounded-pill" if @current_ranking %>
        </div>
      <% end %>
    </div>

    <!-- ジャンル選択タブエリア（右側） -->
    <div class="col-md-4">
      <div class="genre-tabs-container sticky-top" style="top: 10px;">
        <div class="card border-0">
          <div class="card-header bg-white">
            <h5 class="mb-0 fw-bold text-dark">ジャンル</h5>
          </div>
          <div class="card-body p-2">
            <div class="d-flex flex-wrap justify-content-center gap-2" id="rankingTabs" role="tablist">
              <% @genres.each do |genre| %>
                <%= link_to genre_rankings_path(genre_id: genre.id), 
                    class: "btn #{@current_genre&.id == genre.id ? 'btn-danger' : 'btn-outline-secondary'} px-2 py-1 rounded-pill btn-sm" do %>
                  </i><%= genre.name %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- ランキング編集ボタン -->
      <div class="text-center mt-3 mb-2">
        <% if @current_ranking %>
          <%= link_to edit_ranking_path(@current_ranking), class: "btn btn-orange px-3 py-1 rounded-pill shadow-sm" do %>
            <i class="bi bi-pencil-fill me-1"></i>ランキングを編集する
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="tab-content" id="rankingTabContent">
    <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
      <!-- タブコンテンツは空にしておき、JavaScriptで操作 -->
    </div>
    <div class="tab-pane fade" id="shoyu" role="tabpanel" aria-labelledby="shoyu-tab"></div>
    <div class="tab-pane fade" id="miso" role="tabpanel" aria-labelledby="miso-tab"></div>
    <div class="tab-pane fade" id="tonkotsu" role="tabpanel" aria-labelledby="tonkotsu-tab"></div>
  </div>
</div>
