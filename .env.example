# MyFavらぁめん 環境変数設定ファイル

# データベース設定
# Docker環境では docker-compose.yml の設定が優先されます
DATABASE_URL=postgres://myfavramen:password@db:5432/myfavramen_development

# Google Maps API設定
# Google Cloud Platformでキーを取得してください
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# AWS S3設定 (画像アップロード用)
# AWSコンソールでアクセスキーを取得してください
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=ap-northeast-1
AWS_BUCKET=myfavramen-images

# Rails環境設定
RAILS_ENV=development
RAILS_MAX_THREADS=5
RAILS_MASTER_KEY=your_rails_master_key_here

# メール設定 (Devise用)
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_DOMAIN=example.com
SMTP_ADDRESS=smtp.example.com
SMTP_PORT=587