<% content_for :title, "新規登録" %>

<%= render 'shared/header/pc_for_top' %>
<%= render 'shared/header/phone_for_top' %>

<div class="container-sm top-content d-flex align-items-center justify-content-center" style="max-width: 450px; min-height: calc(100vh - 80px);">
  <main class="p-2 w-100">
    <%= render 'shared/flash' %>
    <div class="card shadow-sm">
      <div class="card-header py-2" style="background-color: #fd7e14; color: white;">
        <h5 class="mb-0 small">新規登録</h5>
      </div>
      <div class="card-body p-3">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-2">
            <%= f.label :nickname, "ニックネーム", class: "form-label small mb-1" %>
            <%= f.text_field :nickname, autofocus: true, class: "form-control form-control-sm" %>
          </div>

          <div class="mb-2">
            <%= f.label :email, "メールアドレス", class: "form-label small mb-1" %>
            <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-sm" %>
          </div>

          <div class="mb-2">
            <%= f.label :password, "パスワード", class: "form-label small mb-1" %>
            <% if @minimum_password_length %>
            <small class="form-text text-muted">（<%= @minimum_password_length %> 文字以上）</small>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label small mb-1" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
          </div>

          <div class="text-center">
            <%= f.submit "登録する", class: "btn btn-primary btn-sm", style: "background-color: #fd7e14; border-color: #fd7e14;" %>
          </div>
        <% end %>

        <div class="mt-2 text-center small">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </main>
</div>